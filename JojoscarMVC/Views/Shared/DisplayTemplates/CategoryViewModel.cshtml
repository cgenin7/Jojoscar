@model CategoryViewModel


<div style="margin-left:50px">
    <label> @Model.Category.CategoryName (@Model.Category.NbPoints pts.) : </label>

    @for (int i = 0; i < Model.Category.CategoryNominees.Count; i++)
    {
        if (Model.SelectedLetter.Contains(@Model.Category.CategoryNominees[i].Letter))
        {
            var correctVote = (Model.Category.AcademyChoiceLetter == Model.Category.CategoryNominees[i].Letter);
            <br/>
            <span style="margin-left:50px; color:@(correctVote ? "green" : "black")">
                <label> @Model.Category.CategoryNominees[i].Description </label>
            </span>
        }
    }


</div>
